# Configuración de YouTube Downloader
# Copia este archivo como .env y ajusta los valores según necesites

# Modo debug (True/False)
DEBUG=False

# Puerto del servidor
PORT=5000

# Host (0.0.0.0 para acceso externo, 127.0.0.1 solo local)
HOST=0.0.0.0

# Carpeta temporal para descargas
# TEMP_FOLDER=/tmp/yt_downloads

# Tiempo máximo que los archivos permanecen en el servidor (en segundos)
# 3600 = 1 hora, 7200 = 2 horas
MAX_FILE_AGE=3600

# URL de producción (para CORS)
# PRODUCTION_URL=https://tu-app.onrender.com